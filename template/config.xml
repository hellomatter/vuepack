<?xml version='1.0' encoding='utf-8'?>
<widget id="{{bundle_identifier}}" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>{{name}}</name>
    <description>
        {{description}}
    </description>
    <author email="email@hellomatter.com" href="http://hellomatter.com">
        Matter Technology Ltd
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />{{#if android}}
    <platform name="android">
        <allow-intent href="market:*" />
        <allow-intent href="gap:*" />
    </platform>{{/if}}
    <platform name="browser">
    </platform>{{#if ios}}
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <allow-intent href="gap:*" />
        <icon height="57" src="static/resources/ios/icon/icon.png" width="57" />
        <icon height="114" src="static/resources/ios/icon/icon@2x.png" width="114" />
        <icon height="40" src="static/resources/ios/icon/icon-40.png" width="40" />
        <icon height="80" src="static/resources/ios/icon/icon-40@2x.png" width="80" />
        <icon height="120" src="static/resources/ios/icon/icon-40@3x.png" width="120" />
        <icon height="50" src="static/resources/ios/icon/icon-50.png" width="50" />
        <icon height="100" src="static/resources/ios/icon/icon-50@2x.png" width="100" />
        <icon height="60" src="static/resources/ios/icon/icon-60.png" width="60" />
        <icon height="120" src="static/resources/ios/icon/icon-60@2x.png" width="120" />
        <icon height="180" src="static/resources/ios/icon/icon-60@3x.png" width="180" />
        <icon height="72" src="static/resources/ios/icon/icon-72.png" width="72" />
        <icon height="144" src="static/resources/ios/icon/icon-72@2x.png" width="144" />
        <icon height="76" src="static/resources/ios/icon/icon-76.png" width="76" />
        <icon height="152" src="static/resources/ios/icon/icon-76@2x.png" width="152" />
        <icon height="167" src="static/resources/ios/icon/icon-83.5@2x.png" width="167" />
        <icon height="29" src="static/resources/ios/icon/icon-small.png" width="29" />
        <icon height="58" src="static/resources/ios/icon/icon-small@2x.png" width="58" />
        <icon height="87" src="static/resources/ios/icon/icon-small@3x.png" width="87" />
        <splash height="480" src="static/resources/ios/splash/Default.png" width="320" />
        <splash height="960" src="static/resources/ios/splash/Default@2x.png" width="640" />
        <splash height="1024" src="static/resources/ios/splash/Default-Portrait.png" width="768" />
        <splash height="2048" src="static/resources/ios/splash/Default-Portrait@2x.png" width="1536" />
        <splash height="768" src="static/resources/ios/splash/Default-Landscape.png" width="1024" />
        <splash height="1536" src="static/resources/ios/splash/Default-Landscape@2x.png" width="2048" />
        <splash height="1136" src="static/resources/ios/splash/Default@2x.png" width="640" />
        <splash height="1334" src="static/resources/ios/splash/Default-375w-667h@2x.png" width="750" />
        <splash height="2208" src="static/resources/ios/splash/Default-414w-736h@3x.png" width="1242" />
        <splash height="1242" src="static/resources/ios/splash/Default-414w-736h-Landscape@3x.png" width="2208" />
    </platform>{{/if}}
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-file" />
    <plugin name="cordova-plugin-file-transfer" />
    <plugin name="cordova-plugin-device" spec="~1.1.4" />
    <plugin name="cordova-plugin-console" spec="~1.0.4" />
    <plugin name="cordova-plugin-network-information" spec="~1.3.1" />
    <plugin name="cordova-plugin-splashscreen" spec="~4.0.1" />
    <plugin name="cordova-plugin-camera-preview" />{{#if ios}}
    <engine name="ios" spec="~4.3.1" />{{/if}}{{#if android}}
    <engine name="android" spec="~6.1.1" />{{/if}}
    <engine name="browser" spec="~4.1.0" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="StatusBarOverlaysWebView" value="true" />
    <preference name="AllowInlineMediaPlayback" value="true" />
    <preference name="SuppressesLongPressGesture" value="true" />
</widget>
